<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="WeFairAndriod.MainPage">
    <ContentPage.Content>
        <StackLayout VerticalOptions="CenterAndExpand" HorizontalOptions="CenterAndExpand" Margin="0,40">
            <Label Text="Welcome To The App" TextColor="Black" FontSize="34" FontAttributes="Bold" Margin="0,0,0,20" HorizontalTextAlignment="Center"/>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,20">
                <Image Source="\Imgs\arrow-right-to-bracket-solid.png" WidthRequest="20" HeightRequest="20" Margin="0,0,5,0" />
                <Button Text="Login" WidthRequest="200" HeightRequest="50" FontSize="18" BackgroundColor="#2E86C1" TextColor="White" BorderColor="#3498DB" BorderWidth="1" Clicked="GoToLogin_Click" />
            </StackLayout>
            <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Margin="0,10">
                <Image Source="\Imgs\user-plus-solid.png" WidthRequest="20" HeightRequest="20" Margin="0,0,5,0" />
                <Button Text="Sign Up" WidthRequest="200" HeightRequest="50" FontSize="18" BackgroundColor="#27AE60" TextColor="White" BorderColor="#2ECC71" BorderWidth="1" Clicked="GoToSignUp_Click" />
            </StackLayout>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>